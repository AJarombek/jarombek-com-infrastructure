[
  {
    "cpu": 128,
    "memory": 256,
    "image": "ajarombek/jarombek-com:1.1.10",
    "name": "jarombek-com",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/fargate-tasks",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "networkMode": "awsvpc",
    "essential": false,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080,
        "protocol": "tcp"
      }
    ],
    "environment": [
      {
        "name": "NODE_ENV",
        "value": "production"
      }
    ],
    "healthCheck": {
      "command": ["CMD-SHELL", "curl -f http://localhost:8080 || exit 1"],
      "retries": 5,
      "startPeriod": 60
    },
    "dependsOn": [
      {
        "containerName": "jarombek-com-database",
        "condition": "START"
      }
    ]
  },
  {
    "cpu": 128,
    "memory": 256,
    "image": "ajarombek/jarombek-com-database:1.1.7",
    "name": "jarombek-com-database",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/fargate-tasks",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 27017,
        "hostPort": 27017,
        "protocol": "tcp"
      }
    ]
  }
]