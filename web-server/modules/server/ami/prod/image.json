{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "jarombek-com-app*",
        "root-device-type": "ebs"
      },
      "owners": ["739088120071"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "jarombek-com-prod {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "config.nginx",
      "destination": "/etc/nginx/nginx.conf"
    },
    {
      "type": "file",
      "source": "../shared/certbot.sh",
      "destination": "/home/ec2-user/certbot.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "./playbook.yml"
    }
  ]
}